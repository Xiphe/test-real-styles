{
  "name": "test-real-styles",
  "version": "0.3.0",
  "description": "utilities to test real styling of dom elements",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "tsc",
    "test": "BROWSERS=chromium,webkit,firefox jest",
    "tdd": "BROWSERS=chromium jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Xiphe/test-real-styles.git"
  },
  "keywords": [
    "css",
    "testing",
    "ui-test",
    "browser",
    "playwright",
    "test",
    "jest",
    "styles"
  ],
  "author": "Hannes Diercks <node@xiphe.net> (https://xiphe.net/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xiphe/test-real-styles/issues"
  },
  "homepage": "https://github.com/Xiphe/test-real-styles#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "!**/fixtures/**"
    ],
    "moduleNameMapper": {
      "\\.(scss|css)$": "identity-obj-proxy"
    },
    "testTimeout": 20000
  },
  "devDependencies": {
    "@testing-library/react": "11.0.4",
    "@types/color-namer": "1.3.0",
    "@types/jest": "26.0.14",
    "@types/lodash.kebabcase": "4.1.6",
    "@types/node-sass": "4.11.1",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "5.1.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.4.2",
    "node-sass": "4.14.1",
    "prettier": "2.1.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "styled-components": "5.2.0",
    "ts-jest": "26.4.0",
    "typescript": "4.0.3"
  },
  "dependencies": {
    "color-namer": "^1.4.0",
    "dom-to-playwright": "^0.1.2",
    "lodash.kebabcase": "^4.1.1",
    "rgb-hex": "^3.0.0",
    "playwright": "^1.4.1",
    "with-playwright": "^0.3.0"
  }
}
